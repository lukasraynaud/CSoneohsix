 */
public class ForceCalc {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
			
		double angle = 0.506145483;
		double gravity = 22;
		double d = 100;
		double con = d*0.000621371;
		double v = Math.sqrt(con*gravity/Math.sin(angle)*2);
			
			System.out.println("You have to hit the ball  " + v  );
			System.out.println("meters per second to hit the ball");
			System.out.println(d + "meters");
	}

}
