import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;


public class Filereader {
	
	

public Filereader (double initNumber, String initName, double initHP, double initAttack, double initDefense, double initSAttack, double initSDefense, double initSpeed, double initTotal, double initAverage) throws FileNotFoundException{
	
	// Create File Scanner //
	Scanner fileReader = new Scanner(new File("src/first150pokemon"));
// Set counter to 0 //
	
	int i = 0;
	
	// loop through file to print out all lines and count lines//
	while (fileReader.hasNext()){ 
		
		
		System.out.println(fileReader.nextLine());
		i ++;
	} 
	
	System.out.println(i);
	System.out.println("hello");
	
	double [] number = new double [i];
	String [] name = new String [i];
	double [] hp = new double [i];
	double [] attack = new double [i];
	double [] defense = new double [i];
	double [] sattack = new double [i];
	double [] sdefense = new double [i];
	double [] speed = new double [i];
	double [] total = new double [i];
	double [] average = new double [i];

	
int line = 0;
	while (fileReader.hasNext()){

		number[line] = fileReader.nextDouble();
		name[line] = fileReader.next();
		hp[line] = fileReader.nextDouble();
		attack[line] = fileReader.nextDouble();
		defense[line] = fileReader.nextDouble();
		sattack[line] = fileReader.nextDouble();
		sdefense[line] = fileReader.nextDouble();
		speed[line] = fileReader.nextDouble();
		total [line] = fileReader.nextDouble();
		average[line] = fileReader.nextDouble();

		line++;

	}
	fileReader.close();

System.out.println(number[0]);
System.out.println(name[0]);



}
}



	
